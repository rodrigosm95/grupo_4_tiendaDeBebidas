<!DOCTYPE html>
<html lang="en">

<head>
<%- include("../partial/head") %>
<title>Crear producto</title> 
</head>

<body>
    <header>
        <%- include("../partial/header") %> 
    </header>
    <section class="forms">
        <h1>Crear un Producto</h1>
        <form action="/products/guardar" method="post" enctype="multipart/form-data">
            <section class="imputs">
                <label class="label<%= locals.errors && errors.name ? "_error" : null%>">Nombre</label>
                <input class="imput" type="text" name="name" id="name"value="<%= locals.oldData ? oldData.name : null %> ">

                <label class="label">description</label>
                <input type="text" class="imput" name="description" id="description" value="<%= locals.oldData ? oldData.description : null %> ">
                
                <label class="label">precio</label>
                    <input class="imput" type="number" name="price" id="price" value="<%= locals.oldData ? oldData.price : null %> " >

                    <label class="label">stock</label>
                    <input class="imput" type="number" name="stock" id="stock" value="<%= locals.oldData ? oldData.stock : null %> ">

                    <label class="label">Seleccione una categoria</label>
                    <select class="imput" name="category" id="category">
                        <% for( let i = 0; i < categories.length; i++ ) { %>
                            <option value="<%= categories[i].id %> ">
                            <%= categories[i].name %> </option>
                        <% } %>
                    </select>
                    <input class="imput" type="file" name="image" id="image">
                <button type="submit">Guardar</button>
            </section>
        </form>
    </section>
    <footer>
        <%- include("../partial/footer") %> 
    </footer>
</body>

</html>